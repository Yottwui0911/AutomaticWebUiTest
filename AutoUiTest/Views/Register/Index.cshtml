@{
  ViewData["Title"] = "Register Page";
}

<script type="text/javascript">
  function setResult() {
    var name = document.getElementById("name").value;

    var radio = document.getElementById("sexList").sex;
    var radioValue = radio.value;

    var reason = document.getElementById("reason");
    var num = reason.selectedIndex;
    var reasonValue = reason.options[num].value;

    document.getElementById("result").innerText = "登録者名： " + name + "\n性別： " + radioValue + "\n登録する経緯： " + reasonValue;
  }
</script>

<div class="text-center">
  <h1 class="display-4">Register</h1>
  <h2>登録者名</h2>
  <input id="name" type="text" />

  <br />
  <h2>性別</h2>
  <form id="sexList">
    <input id="male" type="radio" name="sex" value="男性" /> 男性
    <input id="female" type="radio" name="sex" value="女性" /> 女性
    <input id="neither" type="radio" name="sex" value="どちらでもない" /> どちらでもない
    <input id="other" type="radio" name="sex" value="その他" /> その他
  </form>

  <br />
  <h2>登録者名</h2>
  <select id="reason" name="reason">
    <option value="テレビで見た">テレビで見た</option>
    <option value="メルマガが届いた">メルマガが届いた</option>
    <option value="SNSで見た">SNSで見た</option>
    <option value="新聞で見た">新聞で見た</option>
    <option value="雑誌で見た">雑誌で見た</option>
    <option value="その他">その他</option>
  </select>
  <br />

  <button id="registerButton" type="submit" onclick="setResult()"> 登録 </button>
  <br />


  <label id="result"></label>



